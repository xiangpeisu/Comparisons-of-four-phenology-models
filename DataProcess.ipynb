    "    ext = '.tif'\n",
    "    def extract_stationID(self,filepath) -> pd.DataFrame:\n",
    "       
    "        # loaddata\n",
    "        data = pd.read_csv(self.filepath)\n",
    "\n",
    "class ISD_Lite(DataSource):\n",
    "    ext = '.gz'\n"
